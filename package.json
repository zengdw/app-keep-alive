{
	"name": "stms",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "run-p dev:frontend dev:backend",
		"dev:frontend": "vite",
		"dev:backend": "wrangler dev --local --persist-to=.wrangler/state",
		"build": "run-p type-check \"build-only {@}\" --",
		"preview": "pnpm run build && wrangler dev",
		"build-only": "vite build",
		"type-check": "vue-tsc --build",
		"deploy": "pnpm run build && wrangler deploy",
		"deploy:production": "pnpm run build && wrangler deploy --env production",
		"deploy:staging": "pnpm run build && wrangler deploy --env staging",
		"cf-typegen": "wrangler types",
		"db:create": "wrangler d1 create stms-db",
		"db:create:production": "wrangler d1 create stms-db-production",
		"db:create:staging": "wrangler d1 create stms-db-staging",
		"db:migrate": "wrangler d1 migrations apply stms-db --local",
		"db:migrate:production": "wrangler d1 migrations apply stms-db-production --env production",
		"db:migrate:staging": "wrangler d1 migrations apply stms-db-staging --env staging",
		"db:console": "wrangler d1 execute stms-db --local --command=\"SELECT name FROM sqlite_master WHERE type='table';\"",
		"logs": "wrangler tail",
		"logs:production": "wrangler tail --env production",
		"logs:staging": "wrangler tail --env staging",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"pinia": "^3.0.4",
		"resend": "^6.9.1",
		"vue": "^3.5.27",
		"vue-router": "^4.6.4"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.23.1",
		"@tsconfig/node24": "^24.0.4",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^24.10.9",
		"@vitejs/plugin-vue": "^6.0.3",
		"@vitest/coverage-v8": "4.0.18",
		"@vitest/ui": "^4.0.18",
		"@vue/tsconfig": "^0.8.1",
		"better-sqlite3": "^12.6.2",
		"fast-check": "^4.5.3",
		"happy-dom": "^20.5.0",
		"npm-run-all2": "^8.0.4",
		"typescript": "~5.9.3",
		"vite": "^7.3.1",
		"vite-plugin-vue-devtools": "^8.0.5",
		"vitest": "^4.0.18",
		"vue-tsc": "^3.2.4",
		"wrangler": "^4.63.0"
	},
	"engines": {
		"node": "^20.19.0 || >=22.12.0"
	}
}