/**
 * For more details on how to configure Wrangler, refer to:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "stms",
	"compatibility_date": "2025-09-27",
	"main": "server/index.ts",
	"assets": {
		"directory": "dist",
		"not_found_handling": "single-page-application"
	},
	"observability": {
		"enabled": true
	},
	"compatibility_flags": [
		"nodejs_compat"
	],
	"route": {
		"custom_domain": true,
		"pattern": "stms.zengdw.dpdns.org"
	},
	// D1 Database Bindings
	// https://developers.cloudflare.com/d1/
	"d1_databases": [
		{
			"binding": "DB",
			"database_name": "stms-db",
			"database_id": "YOUR_STAGING_DATABASE_ID",
			"remote": false
		}
	],
	// Cron Triggers for scheduled tasks
	// https://developers.cloudflare.com/workers/configuration/cron-triggers/
	// 当前配置：每5分钟执行一次
	// 可根据需要调整频率，例如：
	// - "* * * * *" - 每分钟
	// - "*/10 * * * *" - 每10分钟
	// - "0 * * * *" - 每小时
	"triggers": {
		"crons": [
			"*/5 * * * *"
		]
	},
	// Environment Variables
	// https://developers.cloudflare.com/workers/wrangler/configuration/#environment-variables
	// Note: Use secrets to store sensitive data.
	// https://developers.cloudflare.com/workers/configuration/secrets/
	// 
	// 开发环境：环境变量在 .dev.vars 文件中配置
	// 生产环境：使用 wrangler secret put 命令设置敏感信息
	// 
	// 设置生产环境密钥：
	// wrangler secret put JWT_SECRET
	// wrangler secret put NOTIFYX_API_KEY
	// wrangler secret put EMAIL_API_KEY
	"vars": {
		"ENVIRONMENT": "development"
	},
	// 生产环境配置
	// 使用 wrangler deploy --env production 部署到生产环境
	"env": {
		"production": {
			"name": "stms",
			"vars": {
				"ENVIRONMENT": "production"
			},
			"d1_databases": [
				{
					"binding": "DB",
					"database_name": "stms-db-production",
					"database_id": "4f10a6e7-9840-489b-a988-85f7d824dfed",
					"remote": true,
				}
			],
			"triggers": {
				"crons": [
					"0 * * * *"
				]
			}
		},
		"staging": {
			"name": "stms-staging",
			"vars": {
				"ENVIRONMENT": "staging"
			},
			"d1_databases": [
				{
					"binding": "DB",
					"database_name": "stms-db-staging",
					"database_id": "YOUR_STAGING_DATABASE_ID",
					"remote": true
				}
			],
			"triggers": {
				"crons": [
					"0 * * * *"
				]
			}
		}
	}
}